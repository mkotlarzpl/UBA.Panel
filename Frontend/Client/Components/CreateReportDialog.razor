@using UBA.Panel.Report.Common.DTOs
@inject ISnackbar Snackbar
@inject HttpClient _httpClient
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Create report
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@_reportName" Label="Report name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="CreateReport">Create</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    private string _reportName { get; set; } = string.Empty;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task CreateReport()
    {
        var dto = new CreateReportDto(_reportName);
        await _httpClient.PostAsJsonAsync("/api/reports", dto);
        await Task.Delay(TimeSpan.FromSeconds(2));
        Snackbar.Add("Report created", Severity.Success);
        MudDialog.Close(DialogResult.Ok(string.Empty));
    }
}